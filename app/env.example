# ---------------------------------------
# options that may evolve more frequently
# ---------------------------------------

# what origins (serving experiments) are allowed to use DuckSoup
DS_ORIGINS=http://localhost:8100,http://localhost:8080

# set to true to use nvcodec (needs correctly set up NVIDIA GPU)
DS_NVCODEC=false

# DuckSoup runtime options
DS_GEN_TWCC=true
DS_GCC=true
DS_GST_ENABLE_TRACKING=true
DS_LOG_STDOUT=true
DS_LOG_FILE=log/ducksoup.log
DS_LOG_LEVEL=3
DS_FORCE_OVERLAY=false
DS_CONTAINER_STDERR_FILE=log/ducksoup.stderr.log
GST_DEBUG=2,videodecoder:1
GST_DEBUG_FILE=log/gstreamer.log

# oTree experiment runtime options (how to use DuckSoup)
OTREE_DUCKSOUP_REQUEST_GPU=false
OTREE_DUCKSOUP_FRAMERATE=30
OTREE_DUCKSOUP_WIDTH=800
OTREE_DUCKSOUP_HEIGHT=600
OTREE_DUCKSOUP_FORMAT=H264

# -----------------------------------------------
# more stable configuration (linking and secrets)
# -----------------------------------------------

# main container user
DOCKER_UNAME=deploy
DOCKER_UID=1001
DOCKER_GID=1001

# used by "ducksoup" service
DS_PORT=8100
#DS_WEB_PREFIX=/path
DS_TEST_LOGIN=ducksoup
DS_TEST_PASSWORD=ducksoup
DS_STATS_LOGIN=ducksoup
DS_STATS_PASSWORD=ducksoup

# used by "db" service
POSTGRES_PASSWORD=pg_password

# used by "experiment" service
OTREE_PORT=8080
OTREE_DATABASE_URL="postgres://experiment:pg_password@db/experiment"
OTREE_ADMIN_PASSWORD=password
# ducksoup host
OTREE_DUCKSOUP_URL=http://localhost:8100/

# used by grafana
GF_PORT=3000
GF_PATH=/grafana
GF_PASSWORD=password